# shenv
echo "shenv"

# SSH agent(s)
SSH_ENV=$HOME/.ssh/environment
start_agent () {
    echo "Initialising new SSH agent..."
    /usr/bin/ssh-agent | sed 's/^echo/#echo/' >! ${SSH_ENV}
    chmod 600 ${SSH_ENV}
    . ${SSH_ENV} > /dev/null
    /usr/bin/ssh-add;
}
# Source SSH settings, if applicable
if test -f /usr/bin/keychain || test -f /usr/local/bin/keychain
then
    eval `keychain --eval id_rsa`
elif test -f "${SSH_ENV}"
then
    . ${SSH_ENV} > /dev/null
    ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent > /dev/null || {
        start_agent;
    }
else
    start_agent;
fi

